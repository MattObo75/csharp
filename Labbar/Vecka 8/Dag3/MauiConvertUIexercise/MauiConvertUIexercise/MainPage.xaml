<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiConvertUIexercise.ViewModels"
             x:Class="MauiConvertUIexercise.MainPage"
             Title=""
             BackgroundImageSource="arrows.png">

    <ContentPage.BindingContext>
        <vm:ConverterViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <Grid Padding="30" RowSpacing="15" ColumnSpacing="10">

            <!-- Raddefinitioner -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Kolumndefinitioner -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Titel -->
            <Label
                Grid.Row="0"
                Text="Omvandlare"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center" />
            <!-- Titel -->
            <Label
                Grid.Row="1"
                Text="Feet ↔ Meter"
                FontSize="20"
                HorizontalOptions="Center" />

            <!-- Titel -->
            <Label
                Grid.Row="2"
                Text="Miles ↔ Kilometres"
                FontSize="20"
                HorizontalOptions="Center" />

            <!-- Titel -->
            <Label
                 Grid.Row="3"
                 Text="Stones ↔ Kg"
                 FontSize="20"
                 HorizontalOptions="Center" />

            <!-- Input -->
            <Entry 
                Grid.Row="4"
                Text="{Binding InputValue}"
                Placeholder="Ange värde"
                Keyboard="Numeric" />

            <!-- Picker -->
            <Picker
                Grid.Row="5"
                Title="Välj omvandling"
                ItemsSource="{Binding ConversionOptions}"
                SelectedItem="{Binding SelectedConversion}" />

            <!-- Knapp -->
            <Button
                Grid.Row="6"
                Text="Konvertera"
                TextColor="Black"
                BackgroundColor="#34A2E6"
                BorderWidth="2"
                BorderColor="Black"
                Command="{Binding ConvertCommand}" />

            <!-- Knapp -->
            <Button
                Grid.Row="7"
                Text="Avsluta"
                TextColor="Black"
                BackgroundColor="#34A2E6"
                BorderWidth="2"
                BorderColor="Black"
                Command="{Binding CloseCommand}" />

            <!-- Historik-rubrik -->
            <Label
                Grid.Row="8"
                Text="Historik:"
                FontSize="18"
                FontAttributes="Bold" />

            <!-- Historiklista -->
            <CollectionView
                Grid.Row="9"
                ItemsSource="{Binding History}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label
                            Text="{Binding}"
                            FontSize="16"
                            TextColor="Red" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
            

        </Grid>
    </ScrollView>

</ContentPage>
