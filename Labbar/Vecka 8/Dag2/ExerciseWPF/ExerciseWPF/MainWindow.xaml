<Window x:Name="SimpleCalc" x:Class="ExerciseWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExerciseWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="321" Width="294" Background="#FFA4A4A4">
    <Grid Margin="20">
        <!-- Rader -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Rubrik -->
            <RowDefinition Height="Auto"/>
            <!-- TextBox -->
            <RowDefinition Height="Auto"/>
            <!-- Labels & TextBoxar -->
            <RowDefinition Height="Auto"/>
            <!-- Labels & TextBoxar -->
            <RowDefinition Height="Auto"/>
            <!-- Knappar -->
            <RowDefinition Height="Auto"/>
            <!-- Resultat -->
            <RowDefinition Height="Auto"/>
            <!-- Avsluta -->
        </Grid.RowDefinitions>
        <!-- Kolumner -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblHeader" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Content="Enkel kalkylator" HorizontalAlignment="Center" Margin="0,5,0,0" RenderTransformOrigin="0.211,-1.244" Width="141" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBoxShow" HorizontalAlignment="Left" Margin="4,0,0,0" Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="65" Background="#FFA4A4A4" BorderBrush="{x:Null}" FontSize="14"/>
        <Label x:Name="lblNr1" Content="Ange tal 1:" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" Margin="0,13,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.228,0.902" Width="77" FontSize="14"/>
        <TextBox x:Name="txtBox1" HorizontalAlignment="Left" Margin="4,16,0,0" Grid.Row="2" Grid.Column="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="65" FontSize="14"/>
        <Label x:Name="lblNr2" Content="Ange tal 2:" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Width="75" FontSize="14"/>
        <TextBox x:Name="txtBox2" HorizontalAlignment="Left" Margin="4,0,0,0" Grid.Row="3" Grid.Column="1" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="65" FontSize="14"/>
        <UniformGrid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Columns="4" Margin="5">
            <Button x:Name="cmdAdd" Content="+" Click="cmdAdd_Click" Background="#FFABA7A7"/>
            <Button x:Name="cmdSubtract" Content="-" Click="cmdSubtract_Click" Background="#FFABA7A7"/>
            <Button x:Name="cmdMultiply" Content="*" Click="cmdMultiply_Click" Background="#FFABA7A7"/>
            <Button x:Name="cmdDivide" Content="/" Click="cmdDivide_Click" Background="#FFABA7A7"/>
        </UniformGrid>

        <Label x:Name="lblResult" Content="Resultat:" HorizontalAlignment="Left" Grid.Row="5" Grid.Column="0" VerticalAlignment="Top" Width="67" Height="28" Margin="0,5,0,0" FontSize="14"/>
        <TextBox x:Name="txtBoxResult" HorizontalAlignment="Left" Margin="4,9,0,0" Grid.Row="5" Grid.Column="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="65" Background="#FFF9F9F9" BorderBrush="{x:Null}" FontSize="14" FontWeight="Bold"/>
        <Button x:Name="cmdClose" Content="Avsluta" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Center" Margin="0,10,0,-30" Click="cmdClose_Click"/>

    </Grid>
</Window>
