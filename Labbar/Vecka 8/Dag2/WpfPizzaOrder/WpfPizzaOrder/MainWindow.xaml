<Window x:Class="WpfPizzaOrder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pizzabeställning" Height="800" Width="550" Background="#FFD8D5D5">
    

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>              

        <Label Content="Pizzabeställning"
               FontSize="18"
               FontWeight="Bold"
               HorizontalAlignment="Left" VerticalAlignment="Center"/>
        
        <Image Width="150" Opacity="0.8">
            <Image.Source>
            <BitmapImage DecodePixelWidth="120"  
            UriSource="X:\source\c#\Labbar\Vecka 8\Dag2\WpfPizzaOrder\pizza.png" />
            </Image.Source>
        </Image>


        <!-- Storlek -->
        <GroupBox Header="Välj storlek" Grid.Row="1" Margin="0,10,0,10" FontSize="14">
            <StackPanel Margin="10">
                <RadioButton x:Name="rbSmall" Content="Small (65 kr)"/>
                <RadioButton x:Name="rbMedium" Content="Medium (85 kr)"/>
                <RadioButton x:Name="rbLarge" Content="Large (105 kr)"/>
            </StackPanel>
        </GroupBox>

        <!-- Pizza -->
        <GroupBox Header="Välj pizza" Grid.Row="2" FontSize="14">
            <ComboBox x:Name="cmbPizza" Height="30" Margin="10"/>
        </GroupBox>

        <!-- Lägg till -->
        <Button x:Name="cmdAddPizza"
                Content="Lägg till"
                Grid.Row="3"
                Height="35"
                Click="cmdAddPizza_Click" FontSize="14"/>

        <!-- Orderlista -->
        <ListBox x:Name="lstOrder"
                 Grid.Row="4"
                 Margin="0,10"/>

        <!-- Ta bort -->
        <Button Content="Ta bort vald pizza"
                Grid.Row="5"
                Height="35"
                Click="cmdRemovePizza_Click" FontSize="14"/>

        <!-- Summering -->
        <TextBlock x:Name="txtSummary"
                   Grid.Row="6"
                   FontSize="14"
                   FontWeight="Bold"
                   Margin="0,10"/>

        <!-- Knappar -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="cmdSendOrder"
                    Content="Skicka beställning"
                    Width="150"
                    Margin="0,0,10,0"
                    Click="cmdSendOrder_Click"
                    IsEnabled="False" FontSize="14"/>

            <Button Content="Rensa"
                    Width="100"
                    Click="cmdClear_Click" FontSize="14"/>

            <Button Content="Avsluta"
                    Width="100"
                    Margin="10,0,0,0"
                    Click="cmdClose_Click" FontSize="14"/>
        </StackPanel>
        <Image HorizontalAlignment="Left" Height="100" Margin="255,10,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="100"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="106,29,0,0" Grid.RowSpan="2" Grid.Row="6" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
