<Window x:Class="ExerciseWPFCombo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExerciseWPFCombo"
        mc:Ignorable="d"
        Title="Välj dessert" Height="400" Width="600" Background="#FF7783E6">
    <Grid Margin="20">
        <!-- Rader -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- GroupBox -->
            <RowDefinition Height="Auto"/>
            <!-- Knapp -->
            <RowDefinition Height="Auto"/>
            <!-- Plats för ComboBox -->
            <RowDefinition Height="Auto"/>
            <!-- Plats för Textbox -->
            <RowDefinition Height="*"/>
            <!-- Tom yta -->
        </Grid.RowDefinitions>
        <!-- Kolumner -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- ===== GROUPBOX MED RADIOBUTTONS ===== -->
        <GroupBox Header="Välj alternativ"
	        Grid.Row="0"
	        Grid.Column="0"
	        Grid.ColumnSpan="2"
	        Margin="0,0,0,10">

            <StackPanel Margin="10">
                <RadioButton x:Name="rbAlt1"
			    Content="Äppelpaj"
			    Margin="5"/>
                <RadioButton x:Name="rbAlt2"
			    Content="Glass"
			    Margin="5"/>
                <RadioButton x:Name="rbAlt3"
			    Content="Frukt"
			    Margin="5"/>
            </StackPanel>
        </GroupBox>

        <!-- ===== KNAPP SOM HÄMTAR VÄRDET ===== -->
        <Button x:Name="cmdGetvalue"
	        Content="Hämta valt alternativ"
	        Grid.Row="1"
	        Grid.Column="0"
	        Width="150"
	        Height="35"
	        Click="cmdGetvalue_Click"
	        Margin="10,5,0,10" HorizontalAlignment="Left"/>

        <!-- ===== COMBOBOX ===== -->
        <ComboBox x:Name="cmbValues"
            Grid.Row="2"
            Grid.Column="0"
            Width="200"
            Height="30"
            Margin="10,5,0,10" HorizontalAlignment="Left" SelectionChanged="cmbValues_SelectionChanged">  
        </ComboBox>

        <!-- ===== TEXTBOX FÖR UTSKRIFT ===== -->
        <TextBox x:Name="txtResult"
            Grid.Row="3"
            Grid.Column="0"
            Width="200"
            Height="30"
            Margin="10,5,0,10"
            IsReadOnly="True" HorizontalAlignment="Left" FontSize="14" BorderBrush="{x:Null}" Background="{x:Null}"/> 
    </Grid>
</Window>
